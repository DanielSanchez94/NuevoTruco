extends layout

block content
  .container
    form(role='form', action="/espera",method="post")
     .form-group 
      input.form-control(type="hidden", name='gameid', value='#{g._id}')
      if (usuario == g.player1.name)    
           if (g.player2 == undefined)
             .h2 Esperando que se conecte algun jugador
             input(type="submit", name="accion", value='Actualizar')
           else
             .h2 Inicie la partida!!!
             input(type="submit", name="accion", value='Iniciar partida')
      else 
           if (g.currentRound == undefined)
             .h2 Esperando que #{g.player1.name} inicie la partida!!!
             input(type="submit", name="accion", value='Actualizar')
           else
             .h2 Entre a la partida  
             input(type="submit", name="accion", value='Entrar')           
